			editorTemplate -l "Clear Coat" -addControl "coat3_add";
			editorTemplate -l "Blend Amount" -addControl "coat3_blend";
			editorTemplate -addSeparator;
			
			editorTemplate -l "Coat Material 4" -addControl "coat4";
			editorTemplate -l "Clear Coat" -addControl "coat4_add";
			editorTemplate -l "Blend Amount" -addControl "coat4_blend";
			editorTemplate -addSeparator;
			
			editorTemplate -l "Coat Material 5" -addControl "coat5";
			editorTemplate -l "Clear Coat" -addControl "coat5_add";
