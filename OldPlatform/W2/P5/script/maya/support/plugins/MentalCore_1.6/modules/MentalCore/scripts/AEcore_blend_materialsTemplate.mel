source "AEMentalCoreLogo.mel";

global proc AEcore_blend_materialsTemplate ( string $nodeName )
{
	AEMentalCoreLogo("mc_core_blend_materials_logo.png");

	AEswatchDisplay $nodeName;

	editorTemplate -beginScrollLayout;	
		editorTemplate -beginLayout "Base Material" -collapse 0;
			editorTemplate -l "Base Material" -addControl "base";
		editorTemplate -endLayout;	
	
		editorTemplate -beginLayout "Coat Materials" -collapse 0;
			editorTemplate -l "Coat Material 1" -addControl "coat1";
			editorTemplate -l "Clear Coat" -addControl "coat1_add";
			editorTemplate -l "Blend Amount" -addControl "coat1_blend";
			editorTemplate -addSeparator;
			
			editorTemplate -l "Coat Material 2" -addControl "coat2";
			editorTemplate -l "Clear Coat" -addControl "coat2_add";
